{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@tenlastic/json-schema": ["./modules/json-schema/src"],
      "@tenlastic/mailgun": ["./modules/mailgun/src"],
      "@tenlastic/mongoose-change-stream": ["./modules/mongoose-change-stream/src"],
      "@tenlastic/mongoose-change-stream-kafka": ["./modules/mongoose-change-stream-kafka/src"],
      "@tenlastic/mongoose-permissions": ["./modules/mongoose-permissions/src"],
      "@tenlastic/mongoose-unique-error": ["./modules/mongoose-unique-error/src"],
      "@tenlastic/rabbitmq": ["./modules/rabbitmq/src"],
      "@tenlastic/validations": ["./modules/validations/src"],
      "@tenlastic/web-server": ["./modules/web-server/src"]
    },
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["./node_modules/*"],
  "references": [
    { "path": "./modules/json-schema/tsconfig.app.json" },
    { "path": "./modules/mailgun/tsconfig.app.json" },
    { "path": "./modules/mongoose-change-stream/tsconfig.app.json" },
    { "path": "./modules/mongoose-change-stream-kafka/tsconfig.app.json" },
    { "path": "./modules/mongoose-permissions/tsconfig.app.json" },
    { "path": "./modules/mongoose-unique-error/tsconfig.app.json" },
    { "path": "./modules/rabbitmq/tsconfig.app.json" },
    { "path": "./modules/validations/tsconfig.app.json" },
    { "path": "./modules/web-server/tsconfig.app.json" }
  ]
}
