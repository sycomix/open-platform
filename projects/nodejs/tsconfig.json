{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@tenlastic/api-module": ["./modules/api-module/src"],
      "@tenlastic/api-module/*": ["./modules/api-module/src/*"],
      "@tenlastic/change-data-detection-module": ["./modules/change-data-detection-module/src"],
      "@tenlastic/change-data-detection-module/*": ["./modules/change-data-detection-module/src/*"],
      "@tenlastic/mailgun-module": ["./modules/mailgun-module/src"],
      "@tenlastic/mailgun-module/*": ["./modules/mailgun-module/src/*"],
      "@tenlastic/validations-module": ["./modules/validations-module/src"],
      "@tenlastic/validations-module/*": ["./modules/validations-module/src/*"]
    },
    "sourceMap": true,
    "target": "es2015"
  },
  "exclude": ["./node_modules/*"]
}
